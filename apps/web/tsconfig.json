{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "baseUrl": ".",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/components/*": [
                "./src/components/*"
            ],
            "@/features/*": [
                "./src/features/*"
            ],
            "@/lib/*": [
                "./src/lib/*"
            ],
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/app/(main)/product/[...productId]/not-found.tss"
    ],
    "exclude": [
        "node_modules"
    ]
}
