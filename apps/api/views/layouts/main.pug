doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title #{title}
        link(href="/css/main.css" rel="stylesheet")
        script(src="/jquery/jquery.js")
        script(src="/js/index.js")
        script(src="/js/actions.js")
    body.min-h-screen.relative
        if errorMessage
            .bg-red-500.text-white.px-4.py-2
                | #{errorMessage}
        header
            include navbar.pug
        block content
        include footer.pug
