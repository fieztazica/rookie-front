<div class="container mx-auto py-8">
    <div class="flex justify-between">
        <h1 class="text-xl font-bold">{{heading}}</h1>
        <a class="" href="/admin/{{resourceName}}/create">Create</a>
    </div>
    <div>
        <table class="table table-auto">
            <thead class="table-header-group">
                <tr class="table-row space-x-2">
                    {{#each uniqueKeys}}
                    <th class="table-cell">{{this.titleCase}}</th>
                    {{/each}}
                    <th class="table-cell">Actions</th>
                </tr>
            </thead>
            <tbody class="table-row-group">
                {{#each data}}
                <tr class="table-row space-x-2">
                    {{#each ../uniqueKeys}}
                    <td class="table-cell">{{lookup .. this.key}}</td>
                    {{/each}}
                    <td class="table-cell">
                        <span class="flex space-x-2">
                            <a href="/admin/{{../resourceName}}/edit">Edit</a>
                            <a href="/admin/{{../resourceName}}/delete">Delete</a>
                        </span>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</div>
